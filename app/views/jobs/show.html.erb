<%= render @job %>
<div class="d-flex gap-3 my-3">
<% if current_user.role == "admin" %>  
    <%= link_to "Edit this job", edit_job_path(@job), class:"btn btn-outline-warning" %> 
    <%= button_to "Destroy this job", @job, method: :delete, class:"btn btn-outline-danger" %>  
<% end %>
<%= link_to "Back to jobs", jobs_path, class:"btn btn-outline-secondary" %>
</div>
<% if current_user.photo.attached? %>
  <div class="my-4">
    <%= render 'applications/form' %>
  </div>
<% else %>
  <h5 class="my-4" style="color: red">You have to change your profile photo to apply for the job!</h5>
<% end %>

<% if current_user.role == "admin" %> 
  <%= render @job.applications %>
<% end %>

