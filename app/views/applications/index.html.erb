<h1>Your applications</h1>

<div id="applications">
  <% @applications.each do |application| %>
    <% if application.user_id == current_user.id %>
      <%= render application %>
      <div class="d-flex gap-3">        
        <%= link_to "Edit this applicaton", edit_application_path(application), class:"btn btn-outline-warning btn-sm my-3" %> 
        <%= button_to "Destroy this applicaton", application_path(application), method: :delete, class:"btn btn-outline-danger btn-sm my-3" %>
      </div>  
    <% end %>
  <% end %>
</div>
